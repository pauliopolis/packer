{
  "builders": [
    {
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 8192,
      "guest_os_type": "rhel8-64",
      "headless": true,
      "http_directory": "http",
      "iso_checksum": "sha256:{{user `iso_sha256`}}",
      "iso_url": "{{user `iso_url`}}",
      "shutdown_command": "echo '/sbin/halt -h -p' > /tmp/shutdown.sh; echo 'paul.lambert'|sudo -S sh '/tmp/shutdown.sh'",
      "ssh_port": 22,
      "ssh_private_key_file": "vagrant_rsa_key",
      "ssh_timeout": "10000s",
      "ssh_username": "paul.lambert",
      "tools_upload_flavor": "linux",
      "tools_upload_path": "/tmp/vmware_tools_{{.Flavor}}.iso",
      "type": "vmware-iso",
      "vmx_data": {
        "cpuid.coresPerSocket": "1",
        "memsize": "1024",
        "numvcpus": "1"
      }
    }
  ],
  "post-processors": [
    {
      "override": {
        "vmware": {
          "output": "rhel-8.6-x64-vmware.box"
        }
      },
      "type": "vagrant"
    }
  ],
  "provisioners": [
    {
      "execute_command": "echo 'vagrant'|sudo -S sh '{{.Path}}'",
      "override": {
        "vmware-iso": {
          "scripts": [
            "scripts/base.sh",
            "scripts/vmware.sh",
            "scripts/hgfs.sh",
            "scripts/cleanup.sh",
            "scripts/zerodisk.sh"
          ]
        }
      },
      "type": "shell"
    }
  ],
  "variables": {
    "iso_sha256": "c324f3b07283f9393168f0a4ad2167ebbf7e4699d65c9670e0d9e58ba4e2a9a8",
    "iso_url": "{{env `ISO_URL`}}",
    "vm_name": "rhel-8.6-vmware"
  }
}

